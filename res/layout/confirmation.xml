        android:id="@+id/destLoc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Destination Location " />
    <!-- end of step 1 -->
    <!-- start of step 2 -->
    <TextView
        android:id="@+id/step2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Step 2: " />
