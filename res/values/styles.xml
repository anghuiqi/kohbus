<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionDropDownStyle">@style/MyDropDownNav</item>
        
    </style>

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>
    
	<!-- style of the edittext -->
    <style name="EditTextStyle">
        <item name="android:layout_marginLeft">30dip</item>
        <item name="android:layout_marginRight">30dip</item>
        <item name="android:layout_marginBottom">10dip</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ems">10</item>
    </style>

   	<!-- style of the textField -->
    <style name="TextStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_marginLeft">30dip</item>
        <item name="android:layout_marginRight">30dip</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ems">10</item>
    </style>
    
    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#84B6B8</item>
        <item name="android:textColor">#ffffff</item>
    </style>


    
    <!-- ActionBar dropdown styles -->
     	<style name="MyDropDownNav" parent="android:style/Widget.Holo.Spinner">
       	<!-- item name="android:background">#84B6B8</item> -->
    	<item name="android:popupBackground">#BBE3E0</item>
    	<item name="android:dropDownSelector">#84B6B8</item>
        <item name="android:textColor">#ffffff</item>
    </style>
</resources>
