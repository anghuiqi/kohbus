<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.

    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.

        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionDropDownStyle">@style/MyDropDownNav</item>
<!-- 		<item name="android:spinnerDropDownItemStyle">@style/ActionBar.Solid.MyApp.NavigationDropDownStyle.TextStyle</item> -->
<!--    		<item name="android:spinnerItemStyle">@style/MooSpinnerItem</item> -->
		<item name="android:spinnerItemStyle">@style/SpinnerItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerItem.DropDownItem</item>
        
	</style>

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>
    
	<!-- style of the edittext -->
    <style name="EditTextStyle">
        <item name="android:layout_marginLeft">30dip</item>
        <item name="android:layout_marginRight">30dip</item>
        <item name="android:layout_marginBottom">10dip</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ems">10</item>
    </style>

   	<!-- style of the textField -->
    <style name="TextStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_marginLeft">30dip</item>
        <item name="android:layout_marginRight">30dip</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ems">10</item>
    </style>
    
    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">#102838</item>
        <item name="android:titleTextStyle">@style/MyTextAppearance</item>
    </style>


    
    <!-- ActionBar dropdown styles -->
     	<style name="MyDropDownNav" parent="android:style/Widget.Holo.Spinner">
       	<!-- item name="android:background">#84B6B8</item> -->
    	<item name="android:popupBackground">#102838</item>
    	<item name="android:dropDownSelector">#ffffff</item>
    </style>

    <style name="MyTextAppearance" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
   		<item name="android:textColor">#ffffff</item>
	</style>
	
	<style name="ActionBar.Solid.MyApp.NavigationDropDownStyle.TextStyle" parent="@android:style/Widget">
	    <item name="android:textColor">#ffffff</item>
	</style>
	
	<style name="MooSpinnerItem" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textAppearance">@style/MooTextAppearanceSpinnerItem</item>
    </style>
    
	<style name="MooTextAppearanceSpinnerItem" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">#ffffff</item>
    </style>
    
	<style name="SpinnerItem" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="SpinnerItem.DropDownItem" parent="@android:style/Widget.DropDownItem.Spinner">
        <item name="android:textColor">#ffffff</item>
    </style>


</resources>

